<Window x:Class="AutonomousComputerProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutonomousComputerProgram"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300" Foreground="Aquamarine" Background="Aqua" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="textBox" Margin="10,219,96,10" TextWrapping="Wrap" Background="Black" Foreground="LightGreen" KeyDown="textBox_KeyDown"/>
        <TextBlock x:Name="textBlock" Margin="10,10,96,55" TextWrapping="Wrap" Background="Black" Foreground="LightGreen"/>
        <Button x:Name="button" Content="Enter" Margin="204,219,6,10" Click="button_Click"/>
        <Viewbox x:Name="viewbox1" Margin="204,131,6,55">
            <Image x:Name="image" Height="103" Width="100" Source="ColorBitmap.bmp"/>
        </Viewbox>


    </Grid>
</Window>
